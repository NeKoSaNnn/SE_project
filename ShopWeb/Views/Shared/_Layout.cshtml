<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/css/css")
    @Styles.Render("~/Content/vender/css")

    @Scripts.Render("~/Content/js/js")
    @Scripts.Render("~/Content/vender/js")
    <link rel="icon" type="image/png" href="~/content/fav.png">
    <style>
        .payBackground {
            background: none;
            position: relative;
            padding: 0;
        }

            .payBackground:before {
                margin: 0;
                content: "";
                background: url(/content/image/banner.svg) no-repeat;
                background-attachment: fixed;
                left: 0;
                right: 0;
                top: 0;
                bottom: 0;
                position: fixed;
                pointer-events: none;
                background-size: cover;
                opacity: 0.02;
            }
        .uil-heart.has_liked {
            color: orangered;
        }

        uil-heart.has_not_liked {
            color: gray;
        }
    </style>
</head>
<body class="payBackground">
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</body>
</html>
