@using ShopWeb.Models
@model MemberModifyInfo
@{
    ViewBag.Title = "修改信息";
}

<div class="dashboard-group">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="user-dt">
                    <div class="user-img">
                        <img src="~/Content/image/avatar/img-5.jpg" alt="头像">
                    </div>
                    <h4>@Session["mem_name"].ToString()</h4>
                    <p>@Session["mem_phone"].ToString()</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="">
