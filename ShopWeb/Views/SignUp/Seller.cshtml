@using ShopWeb.Models
@model SellerSignViewModel
@{
    ViewBag.Title = "注册店铺";
}

<div class="form-dt">
    <div class="form-inpts checout-address-step">
        <div class="form-title"><h6>注册店铺</h6></div>
        @using (Html.BeginForm("Seller", "SignUp", FormMethod.Post))
        {
            @*这里直接调试会报错，因为未登录下Session["mem_phone"]为空*@
            <div style="height:80px">
                <div class="form-group form-group-md pos_rel" style="margin-bottom:0px">
                    <input class="form-control lgn_input" value="@Session["mem_phone"].ToString()" disabled name="phone"/>
                    <i class="uil uil-mobile-android-alt lgn_icon"></i>
                </div>
            </div>

            <div style="height:80px">
                <div class="form-group form-group-md pos_rel" style="margin-bottom:0px">
                    @Html.TextBoxFor(now => now.seller_account, new { @class = "form-control lgn_input ", @placeholder = "请绑定您的收款账户", @name = "count", @type = "text", @id = "count" })
                    <i class="uil uil-user-square lgn_icon"></i>
                </div>
                <span id="help-block2" class="help-block">
                    @Html.ValidationMessageFor(now => now.seller_account, "", new { @class = "text-danger" })
                </span>
            </div>

            <div style="height:80px">
                <div class="form-group form-group-md pos_rel" style="margin-bottom:0px">
                    @Html.TextBoxFor(now => now.seller_address, new { @class = "form-control lgn_input", @placeholder = "请输入您的发货地址", @name = "address", @type = "text", @id = "address" })
                    <i class="uil uil-padlock lgn_icon"></i>
                </div>
                <span id="help-block3" class="help-block">
                    @Html.ValidationMessageFor(now => now.seller_address, "", new { @class = "text-danger" })
                </span>
            </div>

            <input class="login-btn hover-btn" type="submit" value="开店" />

        }

    </div>
</div>
