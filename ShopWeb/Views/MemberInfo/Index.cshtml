                                    <div class="panel-heading" id="headingOne" style="background-color:white;">
                                        <div class="panel-title">

                                            <a class="collapsed" data-toggle="collapse" data-target="#collapseOne" href="#" aria-expanded="false" aria-controls="collapseOne">
                                                <i class="uil uil-user-square" style="margin-right:50px"></i>修改用户名
                                            </a>
                                        </div>
                                    </div>
                                    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion0" style="">
                                        <div class="panel-body">
                                            @using (Html.BeginForm("Index", "MemberInfo", FormMethod.Post))
                                            {
                                                <div style="height:80px">
                                                    <div class="form-group form-group-md pos_rel" style="margin-bottom:0px">
                                                        <i class="uil uil-padlock lgn_icon" style="top:15%;left:1%;"></i>
                                                        @Html.TextBoxFor(now_1 => now_1.old_true_pwd, new { @type = "hidden", Value = Session["mem_pwd"] })
                                                        @Html.TextBoxFor(now_1 => now_1.old_mem_pwd, new { @class = "form-control lgn_input", @placeholder = "请输入密码以再次确认身份", @type = "password"})
                                                    </div>
                                                    <span id="help-block1" class="help-block">
                                                        @Html.ValidationMessageFor(now_1 => now_1.old_mem_pwd, "", new { @class = "text-danger" })
                                                    </span>
                                                </div>

                                                <div style="height:80px">
                                                    <div class="form-group form-group-md pos_rel" style="margin-bottom:0px">
                                                        <i class="uil uil-user-square lgn_icon" style="top:15%;left:1%;"></i>
                                                        @Html.TextBoxFor(now_1 => now_1.new_mem_name, new { @class = "form-control lgn_input ", @placeholder = "请输入新的用户名" })
                                                    </div>
                                                    <span id="help-block2" class="help-block">
                                                        @Html.ValidationMessageFor(now_1 => now_1.new_mem_name, "", new { @class = "text-danger" })
                                                    </span>
                                                </div>
                                                <input class="login-btn hover-btn" type="submit" value="确认修改"/>
                                            }

