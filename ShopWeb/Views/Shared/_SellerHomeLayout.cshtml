    <style>
        .form-control:focus {
            outline: none !important;
            box-shadow: none !important;
            border: 1px solid #00C9FF !important;
        }

            .form-control:focus + .lgn_icon {
                color: #00C9FF;
            }

        ul.code-alrt-inputs input:focus {
            box-shadow: none;
            border: 1px solid #00C9FF;
        }

        .ui.input > input:focus {
            border: 1px solid #00C9FF !important;
        }

        .scrollstyle_4::-webkit-scrollbar {
            width: 4px;
            background-color: #f1f1f1;
        }

        .scrollstyle_4::-webkit-scrollbar-thumb {
            background-color: #e5e5e5;
        }

        .scrollstyle_4::-webkit-scrollbar-track {
            background-color: #F5F5F5;
        }

        .zoomImage11 {
            width: 100%;
            height: 0;
            padding-bottom: 100%;
            overflow: hidden;
            background-position: center center;
            background-repeat: no-repeat;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            background-size: cover;
        }

        .zoomImage53 {
            width: 100%;
            height: 0;
            padding-bottom: 60%;
            overflow: hidden;
            background-position: center center;
            background-repeat: no-repeat;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            background-size: cover;
        }

            .zoomImage11:hover, .zoomImage53:hover {
                transition: all 0.6s;
                -webkit-transform: scale(1.1);
                -moz-transform: scale(1.1);
                -ms-transform: scale(1.1);
                transform: scale(1.1);
            }
    </style>

</head>
<!-- Header Start -->
<header class="header clearfix">
    <div class="top-header-group">
        <div class="top-header">
            <a href=@Url.Content("~/Home")>
                <div class="cart__btn hover-btn uil-home-alt" style="height:60px;padding:20px 30px">
                    <span>主页</span>
                </div>
            </a>
            <a href=@Url.Content("~/SellHome")>
                <div class="seller_btn seller_hover_btn uil-store" style="height:60px;padding:20px 30px;">
                    <span>我的店铺</span>
                </div>
            </a>
            <div class="header_right">
                <ul>
                    @if (Session["has_login"] == null)
                    {
                        @Html.ActionLink("登入", "Index", "Login", new { }, new { @style = "color:#00C9FF;margin:0 5px;" })
                        @Html.ActionLink("注册", "Index", "SignUp", new { }, new { @style = "color:#00C9FF;margin:0 5px;" })
                    }
                    @if (Session["has_login"] != null && Convert.ToInt32(Session["mem_type"]) == 2)
                    {
                        <li>
                            <a href="@Url.Content("~/SellInfo")" class="option_links" title="我的收入"><i class='uil uil-wallet icon_wishlist'></i></a>
                        </li>
                        <li height="60px" class="ui dropdown " id="user_li">
                            <a href=@Url.Content("~/SellInfo")>
                                <div class="opts_account" style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                    @{
                                        var str = (Convert.ToInt64(Session["mem_phone"]) % 6).ToString();
                                        str = "/content/image/avatar/img-" + str + ".jpg";
                                    }
                                    <img src=@str alt="头像">
                                    <span class="user__name" style="width:80px;overflow:hidden;text-overflow :ellipsis;white-space:nowrap;"> @Session["mem_name"].ToString()</span>
                                    <i class="uil uil-angle-down"></i>
                                </div>
                            </a>
                            <div class="menu dropdown_account user_div" id="user_btn">
                                <div class="item channel_item"><i class="uil uil-apps icon__1"></i>@Html.ActionLink("我的店铺信息", "Index", "SellInfo", new { }, new { @style = "color:black" })</div>
                                <div class="item channel_item"><i class="uil uil-copyright icon__1"></i>@Html.ActionLink("修改信息", "Modify", "SellInfo", new { }, new { @style = "color:black" })</div>
                                <div class="item channel_item"><i class="uil uil-heart icon__1"></i>@Html.ActionLink("订单列表", "SellList", "SellInfo", new { }, new { @style = "color:black" })</div>
                                <div class="item channel_item"><i class="uil uil-lock-alt icon__1"></i>@Html.ActionLink("注销", "LoginOut", "Login", new { }, new { @style = "color:black" })</div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</header>
<!-- Header End -->
